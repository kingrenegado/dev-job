<main class="contenedor">
    <form action="/crear-cuenta" class="default-form" method="POST">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" id="nombre" placeholder="Tu Nombre">
        </div>
        <div class="campo">
            <label>Email</label>
            <input type="email" name="email" id="email" placeholder="Tu Email">
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" id="password" placeholder="Tu Password">
        </div>
        <div class="campo">
            <label>Repetir Password</label>
            <input type="password" name="confirmar" id="password" placeholder="Confirma Password">
        </div>
        <div class="campo acciones">
            <a href="/iniciar-sesion">Iniciar Sesion</a>
        </div>
        <div class="campo">
            <input type="submit" value="Crear Cuenta" class="btn btn-azul">
        </div>
    </form>
</main>